{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vaka",
  "version": "0.1.0",
  "identifier": "kr.arona.vaka",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "width": 1280,
        "height": 720,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "hiddenTitle": true,
        "minimizable": true,
        "maximizable": true,
        "shadow": true,
        "theme": "Light"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
